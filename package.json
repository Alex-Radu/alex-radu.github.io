{
  "name": "the-stairway",
  "version": "0.0.1",
  "description": "Learning project",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:content && npm run build:styles && npm run format",
    "clean": "rm -f ./dist/*.html && rm -f ./index.html",
    "build:content": "node ./build/builder.js",
    "build:styles": "sass ./build/styles.scss ./assets/styles.css",
    "format": "prettier --write ./dist/*.html && prettier --write ./index.html"
  },
  "author": "Alex-Radu",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "dot": "^1.1.3",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "prettier": "1.19.1",
    "sass": "^1.26.1"
  }
}
